{
  "name": "react-nps",
  "version": "0.2.0",
  "description": "A React component to gather NPS score",
  "main": "lib/index.js",
  "module": "lib/index.js",
  "scripts": {
    "dev": "webpack-dev-server --hot --progress --colors --config ./webpack.config.js",
    "build:lib": "babel src --out-dir lib",
    "build": "yarn build:lib && cross-env NODE_ENV=production webpack --config webpack.prod.config.js",
    "pretest": "yarn lint",
    "prepare": "yarn build",
    "test:watch": "jest ./src/ --watch",
    "test": "jest ./src/",
    "lint": "eslint --ext .jsx,.js -c .eslintrc src",
    "lint:fix": "eslint --fix --ext .jsx,.js -c .eslintrc src",
    "lint:css": "stylelint './src/**/*.style.js'",
    "lint:prettier": "prettier-check '**/*.js'",
    "storybook": "start-storybook -p 9001 -c .storybook"
  },
  "keywords": [
    "react",
    "nps"
  ],
  "author": "Gr√©goire Hamaide (hamaide.gregoire@gmail.com)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ghamaide/react-nps"
  },
  "bugs": {
    "url": "https://github.com/ghamaide/react-nps/issues"
  },
  "peerDependencies": {
    "@material-ui/core": "^1.4.2",
    "@material-ui/icons": "^2.0.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-scripts": "^1.1.4",
    "styled-components": "^3.3.3"
  },
  "devDependencies": {
    "@storybook/react": "^3.4.8",
    "babel-cli": "6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-loader": "^7.1.5",
    "babel-plugin-styled-components": "^1.5.1",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-plugin-transform-export-extensions": "6.22.0",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-preset-env": "1.6.1",
    "babel-preset-react": "6.24.1",
    "cross-env": "5.1.3",
    "css-loader": "0.28.10",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.1",
    "eslint": "^5.2.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-mysticatea": "^4.2.4",
    "eslint-plugin-prefer-object-spread": "^1.2.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.10.0",
    "flow": "^0.2.3",
    "flow-bin": "^0.77.0",
    "flow-coverage-report": "^0.5.0",
    "prettier": "^1.14.0",
    "prettier-check": "^2.0.0",
    "style-loader": "0.20.2",
    "styled-components": "^3.3.3",
    "stylelint": "^9.4.0",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-order": "^0.8.1",
    "stylelint-processor-styled-components": "^1.3.2",
    "stylelint-scss": "^3.2.0",
    "@material-ui/core": "^1.4.2",
    "@material-ui/icons": "^2.0.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-scripts": "^1.1.4"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "setupFiles": [
      "./shim.js",
      "./setup-tests.js"
    ]
  }
}
